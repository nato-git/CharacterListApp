<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/files"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OpenFile">
    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#438293"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        android:id="@+id/header"
        ></View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintEnd_toEndOf="@+id/header"
        android:text="CharactorList"
        android:textSize="45dp"
        android:textColor="#ffffff"
        android:gravity="center"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:backgroundTint="#458395"
        android:gravity="center"
        android:text="ï¼œ"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:padding="0dp"
        app:layout_constraintRight_toRightOf="@+id/header"
        app:layout_constraintStart_toStartOf="@+id/header"
        android:id="@+id/BackButton"></Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        android:id="@+id/Filename"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:textSize="40dp"></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/Filename"
        android:background="@color/black"></View>

</androidx.constraintlayout.widget.ConstraintLayout>