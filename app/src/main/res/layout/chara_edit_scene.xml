<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mains"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".charaEdit">
    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#438293"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        android:id="@+id/header"></View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintEnd_toEndOf="@+id/header"
        android:text="CharactorList"
        android:textSize="45dp"
        android:textColor="#ffffff"
        android:gravity="center"></TextView>
    <Button
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:backgroundTint="#458395"
        android:gravity="center"
        android:text="＜"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:padding="0dp"
        app:layout_constraintRight_toRightOf="@+id/header"
        app:layout_constraintStart_toStartOf="@+id/header"
        android:id="@+id/BackButton"></Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:id="@+id/names"
        android:layout_marginLeft="5dp"
        ></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="Chara"
        app:layout_constraintTop_toBottomOf="@+id/names"
        android:background="#e0e0e0"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/edit_char_name"
        ></EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Content"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_char_name"
        android:id="@+id/contents"
        android:layout_marginLeft="5dp"
        ></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="Human"
        app:layout_constraintTop_toBottomOf="@+id/contents"
        android:background="#e0e0e0"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/edit_char_content"
        android:inputType="textMultiLine"
        ></EditText>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="削除"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:id="@+id/delete_character_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="#ff0000"
        ></Button>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="決定"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:id="@+id/save_edit_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        ></Button>

</androidx.constraintlayout.widget.ConstraintLayout>